	</section>

	<section class="pt-16 flex flex-col items-center w-3/4" id="contact">
		<h2 class="text-4xl font-bold">Contact</h2>
		<a class=" py-6 text-xl md:text-3xl tracking-widest whitespace-nowrap hover:text-green hover:underline hover:underline-offset-8" href="mailto:simon@dunkelman.xyz">simon@dunkelman.xyz</a>
	</section>
	<div class="flex pt-20 pb-2 space-x-6">
		<a href="#services" class="hover:text-green">Services</a>
		<a href="#about" class="hover:text-purple">About</a>
		<a href="#clients" class="hover:text-orange">Clients</a>
