					<div class="w-3 h-3 rounded-full bg-yellow-500"></div>
					<div class="w-3 h-3 rounded-full bg-green-500"></div>
				</div>
                {/* Window title */}
				<div class="absolute -translate-x-1/2 left-1/2 text-center text-sm font-semibold text-gray-700">
					<!--<div class="flex space-x-1 items-center group cursor-pointer">-->
                    <!--    <div class="rounded-full bg-[#333] group-hover:bg-[#6e5494] flex items-center justify-center w-6 h-6 p-1">-->
