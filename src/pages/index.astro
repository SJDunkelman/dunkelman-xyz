	<section class="py-16 flex flex-col items-center w-3/4" id="contact">
		<h2 class="text-4xl font-bold">Contact</h2>
		<p class="py-4 hidden md:visible">hover for more details</p>
		<p class="py-4 md:hidden">tap for more details</p>
		<AnnotatedContact client:visible />
	</section>
	<div class="flex pt-20 pb-2 space-x-6">
		<a href="#services" class="hover:text-green">Services</a>
